type Book {
  id: ID!
  title: String!
  author: Author!
}

type Author {
  id: ID!
  name: String!
  books: [Book]
}

type Query {
  books: [Book]
  authors: [Author]
  bookById(bookId: ID!): Book
}

type Mutation {
  addAuthor(name: String!): Author
  addBook(title: String!, authorId: ID!): Book
}
